{
  "name": "@carloshb/ds",
  "version": "0.1.4",
  "description": "Design System library for carloshb.com.br projects",
  "type": "module",
  "license": "Apache-2.0",
  "author": "Carlos H. Bernardes <contato@carloshb.com.br>",
  "email": "contato@carloshb.com.br",
  "website": "https://carloshb.com.br",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carloshskp/carloshb-ds.git"
  },
  "homepage": "https://storybook.carloshb.com.br",
  "bugs": {
    "url": "https://github.com/carloshskp/carloshb-ds/issues"
  },
  "engines": {
    "node": ">=24.12.0 <25"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js"
    },
    "./primitives": {
      "types": "./dist/types/primitives.d.ts",
      "import": "./dist/primitives.js"
    },
    "./terminal": {
      "types": "./dist/types/terminal.d.ts",
      "import": "./dist/terminal.js"
    },
    "./modal": {
      "types": "./dist/types/modal.d.ts",
      "import": "./dist/modal.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/*.css",
    "**/*.scss"
  ],
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.555.0",
    "tailwind-merge": "^3.4.0"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "react-router-dom": {
      "optional": false
    }
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/react": "^10.1.11",
    "@storybook/react-vite": "^10.1.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.16",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-storybook": "10.1.11",
    "globals": "^17.0.0",
    "jsdom": "^24.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "7",
    "sass": "^1.77.0",
    "storybook": "10.2",
    "tailwindcss": "^3.4.14",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.5.3",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16"
  },
  "scripts": {
    "build": "vite build --config vite.lib.config.ts && node build-css.js",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "yarn build && yarn test:coverage",
    "storybook": "storybook dev -p 6006",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "version:patch": "yarn version patch && ./bin/release.sh",
    "version:minor": "yarn version minor && ./bin/release.sh",
    "version:major": "yarn version major && ./bin/release.sh",
    "build-storybook": "storybook build -o storybook-static -c .storybook --disable-telemetry"
  },
  "keywords": [
    "design-system",
    "react",
    "components",
    "ui"
  ],
  "packageManager": "yarn@4.12.0"
}
